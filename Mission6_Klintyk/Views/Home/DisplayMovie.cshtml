@{
    ViewData["Title"] = "Collection";
}
@model List<Movie>

@*Table to display all the films in the collection*@
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td> Director</td>
            <td> Rating </td>
            <td> Edited</td>
            <td> Lent_to</td>
            <td> Notes</td>
        </tr>
    </thead>
    <tbody>
        @*loop to display each film into the collection*@
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.Title</td>
            <td>@x.Category.Category</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent_to</td>
            <td>@x.Notes</td>
        </tr>
            }
    </tbody>
</table>